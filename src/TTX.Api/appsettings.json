{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "TTX": {
    "Infrastructure": {
      "Twitch": {
        "OAuth": {
          "Scopes": []
        },
        "Streams": {
          "Delay": "00:05:00"
        },
        "Chat": {}
      },
      "Events": "Redis",
      "Data": "Postgres"
    },
    "Api": {
      "ConnectionStrings": {
        "Redis": "redis:6379"
      },
      "SignalR": {
        "ClientTimeoutInterval": "00:00:30",
        "KeepAliveInterval": "00:00:15"
      },
      "Websocket": {
        "KeepAliveInterval": "00:02:00",
        "AllowedOrigins": [
          "https://api.ttx.gg",
          "https://ttx.gg",
          "http://127.0.0.1:5173"
        ]
      },
      "Sessions": {
        "Expires": "7.00:00:00",
        "Validation": {
          "ValidateIssuer": true,
          "ValidateAudience": true,
          "ValidateLifetime": true,
          "ValidateIssuerSigningKey": true,
          "ValidIssuer": "api.ttx.gg",
          "ValidAudience": "ttx.gg"
        }
      }
    }
  }
}
